<Window x:Class="GUI.MainWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="GUI" 
        WindowState = "Maximized"
        WindowStyle = "None">
    <Grid >
        
         <Grid.RowDefinitions  >
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="20" />

        </Grid.RowDefinitions>

        <!--Grid ilgiai-->
        <Grid.ColumnDefinitions  >
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>


        <!--Canvas-->
        <Grid Grid.Row="1" Grid.Column="1" d:IsLocked="True">

            <!--Canvas ilgiai-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <!--Canvas1-->
            <Canvas x:Name="Board" HorizontalAlignment="Left" Height="512" VerticalAlignment="Top" Width="512" Loaded="game_Loaded" />

            <!--Canvas2-->
            <Border Grid.Column="2" Height="514" Width="514" BorderBrush="Black" BorderThickness="1" d:IsLocked="True">
                <Canvas x:Name="BestCanvas" Height="512" Width="512" ClipToBounds="True" d:IsLocked="True"/>
            </Border>

        </Grid>


        <!--Menu-->
        <Grid Grid.Row="1" Grid.Column="3" d:IsLocked="True">

            <!--Menu aukščiai-->
            <Grid.RowDefinitions  >
                <RowDefinition Height="auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!--Pirmas Menu-->
            <Grid Grid.Row="0" d:IsLocked="True" >

                <!--Visi Pirmo Menu ilgiai-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Visi Pirmo Menu aukščiai-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!--Pirmo Pirmo Menu tekstai-->
                <TextBlock Text="N1: " Grid.Column="0" Grid.Row="0" d:IsLocked="True"/>
                <TextBlock Text="N2: " Grid.Column="0" Grid.Row="1" d:IsLocked="True"/>
                <TextBlock Text="M: " Grid.Column="0" Grid.Row="2" d:IsLocked="True"/>
                <TextBlock Text="Type:" Grid.Column="0" Grid.Row="3" d:IsLocked="True"/>
                <TextBlock Text="Iterations: " Grid.Column="0" Grid.Row="4" d:IsLocked="True"/>
                <TextBlock Text="Time: " Grid.Column="0" Grid.Row="5" d:IsLocked="True"/>
                <TextBlock Text="Local Search: " Grid.Column="0" Grid.Row="6" d:IsLocked="True"/>
                <TextBlock Text="FPS: " Grid.Column="0" Grid.Row="7" d:IsLocked="True"/>

                <!--Pirmo Menu values-->
                <TextBox x:Name="N1_Text" Text="16" Grid.Column="1" Grid.Row="0" d:IsLocked="True"/>
                <TextBox x:Name="N2_Text" Text="16" Grid.Column="1" Grid.Row="1" d:IsLocked="True" />
                <TextBox x:Name="M_Text" Text="32" Grid.Column="1" Grid.Row="2" d:IsLocked="True" />
                <!--<ComboBox x:Name="AlgorithType" SelectionChanged="AlgorithType_SelectionChanged" Grid.Column="1" Grid.Row="3" d:IsLocked="True"/>-->
                <TextBox x:Name="Generations_Text" Text="10"  Grid.Column="1" Grid.Row="4" d:IsLocked="True"/>
                <TextBox x:Name="Time_Text" Text="10" Grid.Column="1" Grid.Row="5" d:IsLocked="True" />
                <CheckBox x:Name="Local_Search_Check" IsChecked="False" Grid.Column="1" Grid.Row="6" d:IsLocked="True" IsEnabled="false"/>

                <!--Pirmo Menu Slideris su Value-->
                <Grid Grid.Column="1" Grid.Row="7" d:IsLocked="True" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <Slider Maximum="100" Minimum="1" TickPlacement="BottomRight" TickFrequency="1" Grid.Column="0" Grid.Row="0" 
                    IsSnapToTickEnabled="True"  x:Name="FPS"  Value="100" d:IsLocked="True" />

                    <!--<Slider x:Name="gameSpeedSlider" Grid.Column="0" Grid.Row="0"   Width="75" ValueChanged="gameSpeedSlider_ValueChanged" />-->


                    <TextBlock Margin="10, 0, 0, 0" Grid.Column="1" Grid.Row="0"
                    Text="{Binding ElementName=FPS, Path=Value, UpdateSourceTrigger=PropertyChanged}" d:IsLocked="True"/>
                </Grid>

            </Grid>


            <!--New ir Next-->
            <Grid Grid.Row="2" d:IsLocked="True" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="New" Click="NewAlgorithm" Width="145" Grid.Column="0" d:IsLocked="True"/>
                <!--/<Button Content="Next" Click="Button_Next" Width="145" Grid.Column="1" d:IsLocked="True"/>-->

                <!--<Button Content="Start!" Width="145" Grid.Column="0" Click="ButtonStart_Click" />
                <Button Content="Next &gt;&gt;" Width="145" Grid.Column="1" Click="ButtonNext_Click"  />-->

            </Grid>


            <!-- Antras Menu-->
            <Grid Grid.Row="4" IsEnabled="true" x:Name="OptionalParameters" d:IsLocked="True" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="PopSize:" Grid.Column="0" Grid.Row="0" d:IsLocked="True"/>
                <TextBlock Text="Old Population:" Grid.Column="0" Grid.Row="1" d:IsLocked="True"/>
                <TextBlock Text="Cross Population: " Grid.Column="0" Grid.Row="2" d:IsLocked="True"/>
                <TextBlock Text="New Population:" Grid.Column="0" Grid.Row="3" d:IsLocked="True"/>
                <TextBlock Text="Mutate Chance: " Grid.Column="0" Grid.Row="4" d:IsLocked="True"/>

                <!--<Slider Maximum="100" Minimum="1" TickPlacement="BottomRight" TickFrequency="1" Grid.Column="0" Grid.Row="0" 
                    IsSnapToTickEnabled="True"  x:Name="FPS"  Value="100" d:IsLocked="True" />-->

                <!--<TextBlock Margin="10, 0, 0, 0" Grid.Column="1" Grid.Row="0"
                    Text="{Binding ElementName=FPS, Path=Value, UpdateSourceTrigger=PropertyChanged}" d:IsLocked="True"/>-->

                <TextBox x:Name="PopSize_Text" Text="16" Grid.Column="1" Grid.Row="0" d:IsLocked="True"/>
                <TextBox x:Name="OldPopulationSize_Text" Text="1" Grid.Column="1" Grid.Row="1" d:IsLocked="True"/>
                <TextBox x:Name="CrossPopulationSize_Text" Text="98" Grid.Column="1" Grid.Row="2" d:IsLocked="True"/>
                <TextBox x:Name="NewPopulationSize_Text" Text="1" Grid.Column="1" Grid.Row="3" d:IsLocked="True"/>
                <TextBox x:Name="MutateChance_Text" Text="10" Grid.Column="1" Grid.Row="4" d:IsLocked="True"/>
            </Grid>

        </Grid>
        
        
        <Label x:Name="coordinate" Content="0,0" />
        <Label x:Name="round" Content="0"  Width="75" />
        
        
    </Grid>
</Window>
